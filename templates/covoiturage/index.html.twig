{% extends 'base.html.twig' %}

{% block title %}Liste des Covoiturages
{% endblock %}

{% block body %}
	{% include 'navbar.html.twig' %}
	<div class="container my-5">
		<h1 class="mb-4">Trouver un covoiturage</h1>

		{# Le formulaire de recherche de covoiturage #}
		<div class="card p-4 shadow-sm mb-5">
			{{ form_start(searchForm) }}
			<div class="row g-3">
				<div class="col-md-4">
					{{ form_row(searchForm.lieu_depart) }}
				</div>
				<div class="col-md-4">
					{{ form_row(searchForm.lieu_arrivee) }}
				</div>
				<div class="col-md-4">
					{{ form_row(searchForm.date_depart) }}
				</div>
			</div>
			<div class="text-center mt-4">
				<button type="submit" class="btn btn-primary btn-lg" id="recherche">Rechercher</button>
			</div>
			{{ form_end(searchForm) }}
		</div>

		<h2 class="mt-5">Résultats de la recherche ({{ covoiturages|length }})</h2>

		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead class="table-dark">
					<tr>
						<th>Départ</th>
						<th>Arrivée</th>
						<th>Date de départ</th>
						<th>Heure de départ</th>
						<th>Places disponibles</th>
						<th>Prix par personne</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for covoiturage in covoiturages %}
						<tr>
							<td>{{ covoiturage.lieuDepart }}</td>
							<td>{{ covoiturage.lieuArrivee }}</td>
							<td>{{ covoiturage.dateDepart ? covoiturage.dateDepart|date('d/m/Y') : '' }}</td>
							<td>{{ covoiturage.heureDepart ? covoiturage.heureDepart|date('H:i') : '' }}</td>
							<td>{{ covoiturage.nbPlace }}</td>
							<td>{{ covoiturage.prixPersonne }}
								€</td>
							<td>
								<a href="{{ path('app_covoiturage_show', {'id': covoiturage.id}) }}" class="btn btn-info btn-sm">Voir</a>
								<a href="{{ path('app_covoiturage_edit', {'id': covoiturage.id}) }}" class="btn btn-warning btn-sm">Réserver</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7" class="text-center">Aucun covoiturage ne correspond à vos critères de recherche.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<div class="text-center mt-4">
			<a href="{{ path('app_covoiturage_new') }}" class="btn btn-success">Créer un covoiturage</a>
		</div>
	</div>
	{% include 'footer.html.twig' %}
{% endblock %}
